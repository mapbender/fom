{% extends "FOMUserBundle:Login:box.html.twig" %}

{% block title %} {{ 'fom.user.login.error_tockenexp.title' | trans}} {% endblock %}

{% block box_content %}
    <div class="loginBox">
        <h2 class="contentTitle">{{ 'fom.user.login.error_tockenexp.sorry' | trans}}</h2>
        <span class="description">{{ 'fom.user.login.error_tockenexp.registration_token_expired' | trans}}</span>
        <div class="clearContainer"></div>

        <form action="{{ path('fom_user_password_tokenreset', {'token': user.resettoken}) }}" method="post">
            {{ form_widget(form) }}
            <button class="right button">{{'fom.user.login.error_tockenexp.request_new_token'| trans}}</button>
        </form>
        <a class="left iconLinkButton linkButton" href="{{ path('fom_user_login_login') }}">{{ "fom.user.login.error_tockenexp.back_to_login"|trans}}</a>
        <div class="clearContainer"></div>
    </div>
{% endblock %}
