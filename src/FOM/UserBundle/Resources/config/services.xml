<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="fom.identities.provider.class">FOM\UserBundle\Component\FOMIdentitiesProvider</parameter>
        <parameter key="fom.user_helper.service.class">FOM\UserBundle\Component\UserHelperService</parameter>
        <parameter key="fom.ldap_client.class">FOM\UserBundle\Component\Ldap\Client</parameter>
        <parameter key="fom.ldap_user_identities_provider.class">FOM\UserBundle\Component\Ldap\UserProvider</parameter>
        <parameter key="form.ace.model_transformer.class">FOM\UserBundle\Form\DataTransformer\ACEDataTransformer</parameter>
        <!-- LDAP parameters used in fom.ldap_client, and (indirectly) fom.identities_provider and ACE transformation -->
        <!-- any emptyish value for ldap_host will effectively disable ldap integration -->
        <parameter key="ldap_host">null</parameter>
        <!-- use null for default port (389 for non-TLS LDAP) or an integer -->
        <parameter key="ldap_port">null</parameter>
        <parameter key="ldap_version">3</parameter>
        <parameter key="ldap_bind_dn">null</parameter>
        <parameter key="ldap_bind_pwd">null</parameter>
        <parameter key="ldap_user_base_dn">null</parameter>
        <parameter key="ldap_user_name_attribute">cn</parameter>
        <!-- optional ext-ldap-syntax filter for user objects, e.g. '(|(objectclass=user)(objectclass=person))' -->
        <parameter key="ldap_user_filter">null</parameter>
        <!-- User class (FQCN) for UserSecurityIdentity objects generated by fom.ldap_user_identities_provider.
             Also passed to form.ace.model_transformer as the default ldap user class, if the incoming sid string
             doesn't explicitly encode a class name.
             NOTE: it's legal for the named class to not even exist. It just needs to be consistent with current
                   contents of the ACL DB structure -->
        <parameter key="fom.ldap_user_identities_provider.user_class">Mapbender\LdapIntegrationBundle\Entity\LdapUser</parameter>
    </parameters>
    <services>
        <service id="fom.user_helper.service" class="%fom.user_helper.service.class%">
            <argument type="service" id="security.acl.provider" />
            <argument type="service" id="security.encoder_factory" />
            <argument>%fom_user.user_own_permissions%</argument>
        </service>

        <service id="fom.form_type.user" class="FOM\UserBundle\Form\Type\UserType">
            <tag name="form.type" />
            <argument type="service" id="security.token_storage" />
            <argument>%fom_user.profile_formtype%</argument>
        </service>
        <service id="form.fom.acl" class="FOM\UserBundle\Form\Type\ACLType">
            <argument type="service" id="security.token_storage" />
            <argument type="service" id="security.acl.provider" />
            <tag name="form.type" alias="acl" />
        </service>

        <service id="form.fom.ace" class="FOM\UserBundle\Form\Type\ACEType">
            <argument type="service" id="form.ace.model_transformer" />
            <tag name="form.type" alias="ace" />
        </service>
        <service id="form.ace.model_transformer" class="%form.ace.model_transformer.class%">
            <argument type="service" id="fom.ldap_user_identities_provider" />
            <argument>%fom.ldap_user_identities_provider.user_class%</argument>
        </service>
        <service id="form.user_password" class="FOM\UserBundle\Form\Type\UserPasswordMixinType">
            <argument type="service" id="fom.user_helper.service" />
            <tag name="form.type" />
        </service>

        <service id="fom.acl.manager" class="FOM\UserBundle\Component\AclManager">
            <argument type="service" id="security.acl.provider" />
        </service>

        <service id="fom.identities.provider" class="%fom.identities.provider.class%">
            <argument type="service" id="service_container" />
        </service>
        <service id="fom.ldap_user_identities_provider" class="%fom.ldap_user_identities_provider.class%">
            <argument type="service" id="fom.ldap_client" />
            <argument>%fom.ldap_user_identities_provider.user_class%</argument>
            <argument>%ldap_user_base_dn%</argument>
            <argument>%ldap_user_name_attribute%</argument>
            <argument>%ldap_user_filter%</argument>
        </service>
        <service id="fom.ldap_client" class="%fom.ldap_client.class%">
            <argument>%ldap_host%</argument>
            <argument>%ldap_port%</argument>
            <argument>%ldap_version%</argument>
            <argument>%ldap_bind_dn%</argument>
            <argument>%ldap_bind_pwd%</argument>
        </service>
        <service id="fom.user.subscriber" class="FOM\UserBundle\EventListener\UserSubscriber">
            <tag name="doctrine.event_subscriber" connection="default" />
        </service>
    </services>
</container>
